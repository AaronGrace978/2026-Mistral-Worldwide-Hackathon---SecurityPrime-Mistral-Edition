{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../build"
  },
  "package": {
    "productName": "Cyber Security Prime",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": ["$APPDATA/**", "$HOME/**", "$DOCUMENT/**", "$DOWNLOAD/**", "**"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true,
        "message": true,
        "ask": true,
        "confirm": true
      },
      "os": {
        "all": true
      },
      "process": {
        "all": false,
        "relaunch": true
      },
      "window": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.cybersecurityprime.app",
      "targets": "all",
      "publisher": "Security Prime Inc.",
      "copyright": "Copyright 2024 Security Prime Inc.",
      "windows": {
        "digestAlgorithm": "sha256",
        "timestampUrl": "http://timestamp.digicert.com"
      },
      "category": "Utility",
      "shortDescription": "Enterprise cybersecurity suite for MSPs",
      "longDescription": "Cyber Security Prime is a powerful, modular cybersecurity desktop application for Managed Service Providers. Features include real-time malware scanning, firewall management, file encryption, vulnerability scanning, network monitoring, AI-powered threat analysis, and centralized management dashboard."
    },
    "updater": {
      "active": false,
      "dialog": true,
      "pubkey": "",
      "endpoints": []
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: https:; style-src 'self' 'unsafe-inline'; connect-src 'self' https://*.securityprime.io https://localhost:*"
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "Cyber Security Prime",
        "width": 1280,
        "minWidth": 1024,
        "minHeight": 700,
        "center": true,
        "decorations": true,
        "transparent": false,
        "fileDropEnabled": true
      }
    ]
  }
}

